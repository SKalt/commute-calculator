{
  "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "mocha":true,
      "node":true
  },
  "globals":{
    "mapboxgl":true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmafeatures":{
      "experimentalObjectRestSpread":true
    },
    "sourceType": "module"
  },
  "rules": {
      "indent": [
          "error",
          2
      ],
      "linebreak-style": [
          "error",
          "unix"
      ],
      "quotes": [
          "error",
          "single"
      ],
      "semi": [
          "error",
          "always"
      ]
  }
}
